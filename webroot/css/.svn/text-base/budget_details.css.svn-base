/* budget_details table */
table.budget_details {
    border: 1px solid #ccc;
    margin-top: 10px;
}
table.budget_details tr td, table.budget_details tr th {
    border: 1px solid #ccc;
}
table.budget_details tr th {
    padding: 2px 4px;
    font-weight: bold;
    background: #DFDFDF url(../img/gray-grad.png) repeat-x left top;
    text-shadow:0 1px 0 rgba(255, 255, 255, 0.8);
}
.center {
    text-align: center;
}
.description {
    width: 140px;
    height: 30px;
}
tr.add_description_row td {
    background: #f0f0f0 !important;
}
.numeric {
    text-align: right;
}
table.budget_details tr th.numeric {
    white-space: nowrap;
}
.total {
}
.total_allocated {
    display: block;
    padding-right: 20px; 
    text-align: right;
}
#total_for_activity {
    display: inline-block;
}
.budget_details .up {
    display: inline-block;
    width: 16px;
    height: 12px;
    background: transparent url(../img/up.gif) top left no-repeat;
}
.add_description_row .add_description, #add_row, #del_row {
    font-family: verdana;
    font-weight: bold;
    text-shadow: #efefef 1px 1px 2px;
}
.row_budget_detail_descriptions .empty {
    border-width: 0;
}