/* asset_items table */
table.asset_items {
    border: 1px solid #ccc;
    margin-top: 10px;
}
table.asset_items tr td, table.asset_items tr th {
    border: 1px solid #ccc;
}
table.asset_items tr th {
    padding: 2px 4px;
    font-weight: bold;
    background: #DFDFDF url(../img/gray-grad.png) repeat-x left top;
    text-shadow:0 1px 0 rgba(255, 255, 255, 0.8);
}
.center {
    text-align: center;
}
.numeric {
    text-align: right;
}
table.asset_items tr th.numeric {
    white-space: nowrap;
}
.total_allocated {
    display: block;
    padding-right: 20px; 
    text-align: right;
}
.asset_items .up {
    display: inline-block;
    width: 16px;
    height: 12px;
    background: transparent url(../img/up.gif) top left no-repeat;
}
#add_row, #del_row {
    font-family: verdana;
    font-weight: bold;
    text-shadow: #efefef 1px 1px 2px;
}
